<div class="container">
  <div class="row">
    <% if user_signed_in? %>
    <h3 class="text-center">Leave a review</h3>
    <div class="col-md-4 col-md-offset-4">

      <div class="well">
        <%= form_for(Review.new) do |f| %>
          <div class="form-group">
            <%= f.label :Paws %>
            <%= f.select :rating, options_for_select((1..5).to_a), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Review %>
            <%= f.text_field :comment, placeholder: "Leave a comment", class: 'form-control' %>
          </div>

          <%= f.submit 'Submit', class: 'btn btn-default' %>
          <div class="actions">
            <%= f.hidden_field :title, :value => @movie.title %>
            <%= f.hidden_field :created_at, :value => Time.now %>
            <%= f.hidden_field :user_email, :value => current_user.email %>
          </div>
        <% end %>
      </div>
    </div>
    <% else %>
      <h3 class="text-center"><%= link_to "Log In", new_user_session_path, class: "btn btn-default navbar-btn" %> or <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default navbar-btn" %> to leave a comment

      </h3>
    <% end %>
  </div>
</div>
