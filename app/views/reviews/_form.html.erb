<div class="container">
  <div class="row">
    <h3 class="text-center">Leave a review</h3>
    <div class="col-md-4 col-md-offset-4">

      <div class="well">
        <%= form_for(Review.new) do |f| %>
          <div class="form-group">
            <%= f.label :rating %>
            <%= f.select :rating, options_for_select((1..5).to_a), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_field :comment, placeholder: "Leave a comment", class: 'form-control' %>
          </div>

          <%= f.submit 'Submit', class: 'btn btn-default' %>
          <div class="actions">
            <%= f.hidden_field :title, :value => @movie.title %>
            <%= f.hidden_field :created_at, :value => Time.now %>
            <%= f.hidden_field :user_email, :value => current_user.email %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
